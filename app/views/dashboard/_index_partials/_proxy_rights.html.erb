<div class="clearfix proxy-rights">

  <div class="col-xs-6 proxy-search">
    <h3>Authorize Proxy</h3>
    <%= hidden_field_tag :user %>
  </div>
  
  <div class="col-xs-6">
    <h3>Current Proxies</h3>
    <table class="table table-condensed table-striped" id="authorizedProxies">
      <tbody>
        <% @user.can_receive_deposits_from.each do |depositor| %>
          <tr><td><%= depositor.name %></td>
            <td><%=link_to(user_depositor_path(@user.user_key, depositor.user_key), method: :delete, class: "remove-proxy-button") do %>
              <i class="glyphicon glyphicon-remove"></i><% end %>
            </td></tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
