<!-- Override sufia to remove avatar section -->
<div id="search">
  <%= render partial: 'search_form' %>
  <h1><%= application_name %> Users</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <% name_caret = if params[:sort].blank?
                      'caret up'
                    elsif params[:sort] == 'name desc'
                      'caret'
                    elsif params[:sort] == 'name'
                      'caret up'
                    else
                      ''
                    end
       login_caret = if params[:sort] == 'login desc'
                       'caret'
                     elsif params[:sort] == 'login'
                       'caret up'
                     else
                       ''
                     end
       department_caret = if params[:sort] == 'department desc'
                            'caret'
                          elsif params[:sort] == 'department'
                            'caret up'
                          else
                            ''
                          end %>
    <th class="sorts"><i id="name" class="<%= name_caret %>"></i> User Name</th>
    <th class="sorts"><i id="login" class="<%= login_caret %>"></i> User Id</th>
    <th class="sorts"><i id="department" class="<%= department_caret %>"></i> Department</th>
    <th>Works Created</th>
  </tr>
  </thead>
  <tbody>
  <%= render partial: 'user_row', collection: @users, as: :user %>
  </tbody>
</table>
<div class="pager">
  <%= paginate @users, theme: 'blacklight', route_set: sufia %>
</div>
