<table class="table table-striped" id="notifications_table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Subject</th>
      <th>Message</th>
      <th class="sr-only">Delete Message</th>
    </tr>
  </thead>
  <tbody>
    <% messages.each do |msg| %>
      <%= content_tag :tr, class: cycle("","zebra") do %>
        <td><%= (time_ago_in_words(msg.last_message.created_at) + " ago") %></td>
        <td><%= msg.last_message.subject.html_safe %></td>
        <td><%= msg.last_message.body.html_safe %></td>
        <td>
          <%= link_to raw('<i aria-hidden="true" class="glyphicon glyphicon-trash"></i>'), sufia.notification_path(msg.id), class: "itemicon itemtrash", title: "Delete Message", method: :delete %>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
