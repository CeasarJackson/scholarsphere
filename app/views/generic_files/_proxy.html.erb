<div id="proxy_display" class="tab-pane">
  <%- # set the anchor to proxy_display, so that if there is an error, the user will end up on this tab %>
  <%= form_for @generic_file, :url => polymorphic_path(@generic_file, :anchor => 'proxy_display'), html: {class: 'form-horizontal'} do |f| %>
    <div class="well">
      <%= error_messages_for(f.object) %>
      <div class="control-group">
        <%= f.label :transfer_to, class: 'control-label' %>
        <div class="controls">
        <%= f.text_field :transfer_to %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Transfer", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
