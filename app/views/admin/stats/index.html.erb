<div class="stats">
<h1>Statistics for <%= ScholarSphere::Application.config.application_name %>
<%= ScholarSphere::Application.config.scholarsphere_version %></h1>
<br />
<h3>Total Files: <%= @files_count[:total] %> </h3>
<br />
<h4>Totals by Visibility</h4>
<ul>
  <li>Open Access <span class="count">(<%= @files_count[:public] %>)</span></li>
  <li>Penn State <span class="count">(<%= @files_count[:psu] %>)</span></li>
  <li>Private <span class="count">(<%= @files_count[:private] %>)</span></li>
</ul>

<h4>Top File Formats</h4>
<ul>
<% @top_formats.each do |k, v| %>
  <li><%= k  %> <span class="count">(<%= v %>)</span></li>
<% end %>
</ul>

<br/>
<h3>Total ScholarSphere Users:&nbsp; <%= @users_count %> </h3>
<br/>

<h4>Newest Users</h4>
  <%= form_for "users_stats", method:"GET" do |f| %>
    <%= f.label "Display users registered since" %>
    <input type="date" name="users_stats[start_date]" value="<%=@users_stats[:start_date]%>"></input>
    <%= f.submit "Load Stats" %>
  <%- end %>

  <%- if @users_stats[:start_date] %>
    <div>Total: <%= @recent_users.count %></div>
  <%- else %>
    Five most recent users:
  <%- end %>

<ul>
  <% @recent_users.each do |usr| %>
    <li>
      <a href="<%= sufia.profile_path(usr.login) %>" title="View user's profile"><%= usr.name %></a>
      <%- if usr.department %>
        of <%= usr.department %>
      <%- end %>
      registered
      <span class="date">
        <%= usr.created_at.to_time.strftime("%m/%d/%Y") %>
      </span>
    </li>
  <% end %>
</ul>


<br/>
<h4>Most Active Users</h4>
<ul>
   <% @active_users.each do |k, v| %>
      <li>
         <%= link_to_profile(k) %> <span class="count">(<%= v %>)</span>
      </li>
   <% end %>
</ul>
</div>
