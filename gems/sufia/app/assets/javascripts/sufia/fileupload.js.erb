//= require sufia/uploader
// This file is the default initialization of the fileupload.  If you want to call
// sufiaUploader with other options (like afterSubmit), then override this file.
Blacklight.onLoad(function() {
  var options = {};
  <% if Rails.env.development? %>
  // use sequential uploads in development to avoid database locking problems with sqlite3.
  options.sequentialUploads = true;
  options.limitConcurrentUploads = 1;
  <% end %>
  $('#fileupload').sufiaUploader(options);
});
